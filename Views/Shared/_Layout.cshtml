<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] | Goon Games</title>
	<link rel="stylesheet" href="~/css/site.css" />
	<link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&family=Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Architects+Daughter&display=swap" rel="stylesheet">
</head>
<body>
	<nav class="navbar">
		<div>
			<input type="checkbox" id="nav-menuicon" />
            <label class="nav-menulabel" for="nav-menuicon">
                <svg class="menubars" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="bars" class="svg-inline--fa fa-bars fa-w-14" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
					<path fill="currentColor" d="M16 132h416c8.837 0 16-7.163 16-16V76c0-8.837-7.163-16-16-16H16C7.163 60 0 67.163 0 76v40c0 8.837 7.163 16 16 16zm0 160h416c8.837 0 16-7.163 16-16v-40c0-8.837-7.163-16-16-16H16c-8.837 0-16 7.163-16 16v40c0 8.837 7.163 16 16 16zm0 160h416c8.837 0 16-7.163 16-16v-40c0-8.837-7.163-16-16-16H16c-8.837 0-16 7.163-16 16v40c0 8.837 7.163 16 16 16z">
					</path>
				</svg>
            </label>
			<div>
				<ul class="navbar-nav">
					<li class="navbar-brand">
						<a asp-area="" asp-controller="Home" asp-action="Index">Goon Games</a>
					</li>
					<li class="nav-item" id="nav-item">
						<a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
					</li>
					<li class="nav-item" id="nav-item">
						<a asp-area="" asp-controller="Rules" asp-action="index">Rules</a>
					</li>
					<li class="nav-item" id="nav-item">
						<a asp-area="" asp-controller="play" asp-action="question">Play</a>
					</li>
					<li class="nav-item" id="nav-item">
						<a asp-area="" asp-controller="Leaderboard" asp-action="index">Leaderboard</a>
					</li>
					@{
						if (Convert.ToString(ViewData["LoginStatus"]) == "Logout")
						{
							<li class="nav-item" id="nav-item">
								<a asp-area="" asp-controller="shop" asp-action="index">Shop</a>
							</li>
						}
					}
					<li class="nav-item" id="nav-item">
						@{
							if (Convert.ToString(ViewData["LoginStatus"]) == "Login/Register")
							{
								<a asp-area="" asp-controller="user" asp-action="index">Login/Register</a>
							}
							else if (Convert.ToString(ViewData["LoginStatus"]) == "Logout")
							{
								<a asp-area="" asp-controller="user" asp-action="logout">Logout</a>
							}
						}
					</li>
				</ul>
			</div>
		</div>
	</nav>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>
	<div class="footertext">
		&copy; 2020 - Goon Gang
	</div>
</body>
</html>